<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4252B9"
    tools:context=".Main2Activity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="735dp"
        android:layout_height="113dp"
        android:background="@android:color/black"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layouttelefono">

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btredondo"
            android:onClick="cambiomenu"
            android:text="@string/volver_al_menu" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btredondo"
            android:onClick="cambiolista"
            android:text="@string/ver_lista" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layouttelefono"
        android:layout_width="351dp"
        android:layout_height="137dp"
        android:background="#053C88"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layoutcurso"
        app:layout_constraintTop_toBottomOf="@+id/layoutapellidos"></LinearLayout>

    <LinearLayout
        android:id="@+id/layoutcurso"
        android:layout_width="352dp"
        android:layout_height="137dp"
        android:background="#4252B9"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toStartOf="@+id/layouttelefono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutnombre"></LinearLayout>

    <LinearLayout
        android:id="@+id/layoutapellidos"
        android:layout_width="352dp"
        android:layout_height="111dp"
        android:background="#4252B9"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/layouttelefono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layoutnombre"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/layoutnombre"
        android:layout_width="346dp"
        android:layout_height="120dp"
        android:background="#053C88"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/layoutcurso"
        app:layout_constraintEnd_toStartOf="@+id/layoutapellidos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>